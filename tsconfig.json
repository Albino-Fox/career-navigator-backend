{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "rootDir": "./",
    "moduleResolution": "Node16",
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "checkJs": true,
    "paths": {
      "@/*" : ["./src/*"]
    },
    "noEmit": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist", 
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}